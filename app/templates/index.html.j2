{% extends "base.html.j2" %}

{% block content %}
    {% if books %}
        <table class="table table-striped table-hover table-dark">
        <thead>
            <tr>
            <th scope="col">Book Name</th>
            <th scope="col">Price</th>
            </tr> 
        </thead>
        <tbody>
            {% for book in books %}
            {% include "./includes/modals.html.j2" %}
                <tr>
                    <th style='color:white;' scope="row">{{ book.book_name }}</th>
                    <td style='color:white;'>${{ book.price }}</td>
                    <td>
                        <button class="btn btn-outline btn-info" data-bs-toggle="modal" data-bs-target="#view-more-{{book.id}}">View</button>
                        <button class="btn btn-outline btn-success" data-bs-toggle="modal" data-bs-target="#purchase-{{book.id}}">Buy</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        </table>
    {% endif %}
{% endblock  %}
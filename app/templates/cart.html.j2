{% extends "base.html.j2" %}

{% block content %}
    {% if session['Cart'] %}
    <a href="{{url_for('index')}}" class="btn btn-outline btn-success">Continue Shopping</a>
        <table class="table table-striped table-hover table-dark">
            <thead>
                <tr>
                <th>Sr</th>
                <th>Books</th>
                <th>Price</th>
                <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                {% for key, book in session['Cart'].items() %}
                <tr>
                    <th scope="row">{{ loop.index }}</th>
                    <td>{{ book.name }}</td>
                    <td>{{ book.price }}</td>
                    <td><a href="{{url_for('delete', id=key)}}" class="btn btn-outline btn-danger">Remove</a></td>
                </tr>
                {% endfor %}
                <tr>
                    <td>Tax: {{ tax }}</td>
                    <td>Total: {{ total }}</td>
                    <td><a href="{{url_for('index')}}" class="btn btn-outline btn-success">Finish</a></td>
                </tr>
            </tbody>
        </table>
    {% endif %}
{% endblock  %}